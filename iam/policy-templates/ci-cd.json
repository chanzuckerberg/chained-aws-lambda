{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:AbortMultipartUpload",
        "s3:Get*",
        "s3:List*",
        "s3:PutObject*"
      ],
      "Resource": [
        "arn:aws:s3:::$S3_BUCKET",
        "arn:aws:s3:::$S3_BUCKET/*"
      ]
    },
    {
      "Action": "lambda:List*",
      "Resource": "*",
      "Effect": "Allow"
    },
    {
      "Action": "lambda:*",
      "Resource": "arn:aws:lambda:*:$account_id:function:chained-aws-lambda-*",
      "Effect": "Allow"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:ListRoles"
      ],
      "Resource": "arn:aws:iam::$account_id:role/"
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLog*",
        "logs:DescribeLog*",
        "logs:FilterLogEvents",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-fasttest-$DEPLOYMENT_STAGE",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-fasttest-$DEPLOYMENT_STAGE:log-stream:*",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-s3_copy-$DEPLOYMENT_STAGE",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-s3_copy-$DEPLOYMENT_STAGE:log-stream:*",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-s3_parallel_copy-supervisor-$DEPLOYMENT_STAGE",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-s3_parallel_copy_supervisor-$DEPLOYMENT_STAGE:log-stream:*",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-supervisortest-$DEPLOYMENT_STAGE",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-supervisortest-$DEPLOYMENT_STAGE:log-stream:*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "sns:*",
      "Resource": [
        "arn:aws:sns:*:$account_id:chained-aws-lambda-fasttest-$DEPLOYMENT_STAGE",
        "arn:aws:sns:*:$account_id:chained-aws-lambda-s3_copy-$DEPLOYMENT_STAGE",
        "arn:aws:sns:*:$account_id:chained-aws-lambda-s3_parallel_copy_supervisor-$DEPLOYMENT_STAGE",
        "arn:aws:sns:*:$account_id:chained-aws-lambda-s3_parallel_copy_worker-$DEPLOYMENT_STAGE",
        "arn:aws:sns:*:$account_id:chained-aws-lambda-supervisortest-$DEPLOYMENT_STAGE"
      ]
    }
  ]
}
