{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "logs:*",
      "Resource": [
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-fasttest-$stage",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-fasttest-$stage:log-stream:*",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-supervisortest-$stage",
        "arn:aws:logs:*:*:log-group:chained-aws-lambda-supervisortest-$stage:log-stream:*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "sns:Publish",
      "Resource": [
        "arn:aws:sns:*:$account_id:chained-aws-lambda-fasttest-$stage",
        "arn:aws:sns:*:$account_id:chained-aws-lambda-supervisortest-$stage"
      ]
    }
  ]
}
